{
    "compilerOptions": {
        // Project References:
        "composite": true,

        // Compiler Behaviour:
        "extendedDiagnostics": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "skipLibCheck": true, // time-saving measure.

        // Language Settings:
        "target": "es6",
        "lib": [ "es6", "dom", "es2019.array" ],
        "module": "ES6",

        // Emit Flags:
        "sourceMap":      true,
        "removeComments": true,
        "alwaysStrict":   true,

        // Grammar Checking:
        "strictNullChecks":     true,
        "strictFunctionTypes":  true,
        "noImplicitReturns":    true,
        "strictBindCallApply":  true,
        "noImplicitThis":       true,
    },
}